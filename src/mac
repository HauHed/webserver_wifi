#include <stdio.h>
#include "esp_system.h"
#include "esp_log.h"
#include "esp_mac.h"   // << ต้องใส่เพิ่ม

static const char *TAG = "MAC_CHECK";

void app_main(void)
{
    while (1)
    {
        uint8_t mac[6];
    esp_err_t ret = esp_base_mac_addr_get(mac);

    if (ret == ESP_OK) {
        ESP_LOGI(TAG, "Base MAC Address: %02X:%02X:%02X:%02X:%02X:%02X",
                 mac[0], mac[1], mac[2], mac[3], mac[4], mac[5]);
    } else {
        ESP_LOGE(TAG, "Failed to get Base MAC, error = %d", ret);
    }
    }
    
   
}
